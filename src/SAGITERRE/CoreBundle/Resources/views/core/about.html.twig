                            <div class="grid_1 mrg0">
                                <img src="{{ asset('images/page-2_ico-1.png') }}" alt="ico">
                            </div><!--/grid-->
                            <h3 class='left h-icon textToModify about' data-id="{{ about.id }}" data-part="abouttitle">{{ about.title }}</h3>
                            <p class='p2-sl-cont left textToModify about'  data-id="{{ about.id }}" data-part="aboutsubtitle">{{ about.subtitle }}</p>
                        </div><!--/grid-->

                        <div class="grid_4 hidd">
                            <img class="c-block-pic1" src="{{ asset(about.imagePath) }}" alt="{{ about.imageAlt }}">
                        </div><!--/grid-->
                        <div class="grid_8 mrg0">
