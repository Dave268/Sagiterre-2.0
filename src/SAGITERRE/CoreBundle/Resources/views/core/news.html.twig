{# src/SAGITERRE/CoreBundle/Resources/views/core/about.html.twig #}

{% extends "SAGITERRECoreBundle::layout.html.twig" %}

{% block title %}
    News
{% endblock %}


{% block head %}
    <link rel="stylesheet" href="{{ asset('css/grid.css') }}">
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    <link rel="stylesheet" href="{{ asset('css/contact-form.css') }}">
    <script src="{{ asset('js/jquery.js') }}"></script>
    <script src="{{ asset('js/jquery-migrate-1.2.1.js') }}"></script>
    <script src="{{ asset('js/modal.js') }}"></script>
    <script src="{{ asset('js/TMForm.js') }}"></script>
    <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
    <script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>

    {% if is_granted('ROLE_USER') %}
        <!--<link rel="stylesheet" href="{{ asset('bundles/admin/editor/css/documentation.css') }}">-->
        <script src="{{ asset('bundles/admin/editor/js/jquery.classyedit.js') }}"></script>
        <link rel="stylesheet" href="{{ asset('bundles/admin/editor/css/jquery.classyedit.css') }}">
    {% endif %}


{% endblock %}


{% block body %}
    <div class="header-parall" data-stellar-background-ratio="0.8">
    </div>
    <div class="bg-secondary2">
        <div class="container">
            <div class="row">
                <div class="grid_12 wow fadeInUp well_cont1" data-wow-delay="0.2s">
                    <div class="grid_6 mrg0">
                        <div class="grid_1 mrg0">
                            <img src="{{ asset('images/page-4_ico-2.png') }}" alt="ico">
                        </div><!--/grid-->
                        <h3 class='left h-icon textToModify news' data-id="{{ news.id }}" data-part="newstitle">{{ news.title }}</h3>
                        <p class='sl-cont2 left textToModify news' data-id="{{ news.id }}" data-part="newssubtitle">{{ news.subtitle }}</p>

                        {% if is_granted('ROLE_USER') %}
                            <div class="cont-block1">
                                <div class="grid_2 mrg0 hidd">
                                    <div class="pic-hov"></div>
                                    <img class="c-block-pic" src="{{ asset('bundles/Layout/images/black.jpg') }}" alt="pic">
                                </div><!--/grid-->
                                <p class='left c-block-h'>Nouvelle News</p>
                                <p class='c-block-date'>{{ "now"|date("d") }}<br>
                                    {{ "now"|date("m") }}</p>
                                <a class="c-block-a" href="{{ path('sagiterre_core_news_add') }}">Cliquez ici</a>
                            </div>
                    </div>
                    {% set myVal = 1 %}
                    {% else %}
                        {% set myVal = 0 %}
                        {% endif %}
                    <!--/grid-->




                    {% for newsP in newsPosted %}
                        {% if myVal == 0 %}
                            <div class="cont-block1">
                                <div class="grid_2 mrg0 hidd">
                                    <div class="pic-hov"></div>
                                    <img class="c-block-pic" src="{{ asset( newsP.imgPath) }}" alt="{{ newsP.imgPath }}">
                                </div><!--/grid-->
                                <p class='left c-block-h'>{{ newsP.title }}</p>
                                <p class='c-block-date'>{{ newsP.dateAdd|date("d") }}<br>
                                    {{ newsP.dateAdd|date("m") }}</p>
                                <p class='left c-block-dis'>{{ newsP.intro }}</p>
                                <a class="c-block-a" href="{% if is_granted('ROLE_USER') %}{{ path('sagiterre_core_news_modify', {'id': newsP.id}) }}{% else %}{{ path('sagiterre_core_news_view', {'id': newsP.id}) }}{% endif %}">{% if is_granted('ROLE_USER') %}Modifier{% else %}More{% endif %}</a>
                            </div>
                            </div>
                            {% elseif myVal is even %}
                                <div class="grid_6 mrg0">
                                    <div class="cont-block1">
                                        <div class="grid_2 mrg0 hidd">
                                            <div class="pic-hov"></div>
                                            <img class="c-block-pic" src="{{ asset( newsP.imgPath) }}" alt="{{ newsP.imgPath }}">
                                        </div>
                                        <p class='left c-block-h'>{{ newsP.title }}</p>
                                        <p class='c-block-date'>{{ newsP.dateAdd|date("d") }}<br>
                                            {{ newsP.dateAdd|date("m") }}</p>
                                        <p class='left c-block-dis'>{{ newsP.intro }}</p>
                                        <a class="c-block-a" href="{% if is_granted('ROLE_USER') %}{{ path('sagiterre_core_news_modify', {'id': newsP.id}) }}{% else %}{{ path('sagiterre_core_news_view', {'id': newsP.id}) }}{% endif %}">{% if is_granted('ROLE_USER') %}Modifier{% else %}More{% endif %}</a>
                                    </div>
                                </div>
                            {% elseif myVal > 2 %}
                                <div class="grid_6">
                                    <div class="cont-block1">
                                        <div class="grid_2 mrg0 hidd">
                                            <div class="pic-hov"></div>
                                            <img class="c-block-pic" src="{{ asset( newsP.imgPath) }}" alt="{{ newsP.imgPath }}">
                                        </div>
                                        <p class='left c-block-h'>{{ newsP.title }}</p>
                                        <p class='c-block-date'>{{ newsP.dateAdd|date("d") }}<br>
                                            {{ newsP.dateAdd|date("m") }}</p>
                                        <p class='left c-block-dis'>{{ newsP.intro }}</p>
                                        <a class="c-block-a" href="{% if is_granted('ROLE_USER') %}{{ path('sagiterre_core_news_modify', {'id': newsP.id}) }}{% else %}{{ path('sagiterre_core_news_view', {'id': newsP.id}) }}{% endif %}">{% if is_granted('ROLE_USER') %}Modifier{% else %}More{% endif %}</a>
                                    </div>
                                </div>
                            {% else %}
                            <div class="grid_6">
                                <div class="cont-block1 cont-bl2">
                                    <div class="grid_2 mrg0 hidd">
                                        <div class="pic-hov"></div>
                                        <img class="c-block-pic" src="{{ asset( newsP.imgPath) }}" alt="{{ newsP.imgPath }}">
                                    </div>
                                    <p class='left c-block-h'>{{ newsP.title }}</p>
                                    <p class='c-block-date'>{{ newsP.dateAdd|date("d") }}<br>
                                        {{ newsP.dateAdd|date("m") }}</p>
                                    <p class='left c-block-dis'>{{ newsP.intro }}</p>
                                    <a class="c-block-a" href="{% if is_granted('ROLE_USER') %}{{ path('sagiterre_core_news_modify', {'id': newsP.id}) }}{% else %}{{ path('sagiterre_core_news_view', {'id': newsP.id}) }}{% endif %}">{% if is_granted('ROLE_USER') %}Modifier{% else %}More{% endif %}</a>
                                </div>
                            </div>
                            {% endif %}
                        {% set myVal = myVal + 1 %}
                    {% else %}
                        <h2>Il n'y pas de news pour le moment</h2>
                    {% endfor %}
                </div><!--/grid-->
            </div>
        </div>
    </div>

    <div class="bg-secondary1">
        <div class="container">
            <div class="row">
                <div class="grid_12 wow fadeInUp well-h3 mrg0" data-wow-delay="0.2s">
                    <div class="grid_1">
                        <img src="images/page-4_ico-3.png" alt="ico">
                    </div><!--/grid-->
                    <h3 class='left h-icon'>news archives</h3>
                    <p class='p2-sl-cont2 left padd-right'>Praesent fermentum sit amet</p>
                    <div class="grid_4 p2-c-block-h4">
                        <a class='left arr-cont' href="#">January 2014 </a>
                        <a class='left arr-cont' href="#">February 2014 </a>
                        <a class='left arr-cont' href="#">March 2014 </a>
                        <a class='left arr-cont' href="#">April 2014 </a>
                        <a class='left arr-cont' href="#">May 2014 </a>
                        <a class='left arr-cont' href="#">June 2014 </a>
                    </div><!--/grid-->

                    <div class="grid_4 p2-c-block-h4">
                        <a class='left arr-cont' href="#">July 2014 </a>
                        <a class='left arr-cont' href="#">August 2014 </a>
                        <a class='left arr-cont' href="#">September 2014 </a>
                        <a class='left arr-cont' href="#">October 2014 </a>
                        <a class='left arr-cont' href="#">November 2014 </a>
                        <a class='left arr-cont' href="#">December 2014 </a>
                    </div><!--/grid-->

                    <div class="grid_4 p2-c-block-h4">
                        <a class='left arr-cont' href="#">January 2013 </a>
                        <a class='left arr-cont' href="#">February 2013 </a>
                        <a class='left arr-cont' href="#">March 2013 </a>
                        <a class='left arr-cont' href="#">April 2013 </a>
                        <a class='left arr-cont' href="#">May 2013 </a>
                        <a class='left arr-cont' href="#">June 2013 </a>
                    </div><!--/grid-->
                </div><!--/grid-->
            </div>
        </div>
    </div>
{% endblock %}